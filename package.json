{
  "name": "fishing-booking-chat",
  "version": "1.0.0",
  "description": "Simple chat service with React frontend and Node.js backend",
  "private": true,
  "workspaces": [
    "web",
    "api",
    "chat-api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:chat\"",
    "dev:web": "cd web && npm run dev",
    "dev:chat": "cd chat-api && npm run dev",
    "build": "npm run build:web && npm run build:chat",
    "build:web": "cd web && npm run build",
    "build:chat": "cd chat-api && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "install:all": "npm install && cd web && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
